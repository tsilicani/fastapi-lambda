{
  "scripts": {
    "test": "poetry run pytest tests -v -k 'not e2e'",
    "test:cov": "poetry run pytest tests/ --cov=fastapifn --cov-report=term-missing --cov-report=html -k 'not e2e'",
    "test:watch": "poetry run pytest-watch tests/  -k 'not e2e'",
    "test:e2e": "poetry run pytest tests/e2e/ -v",
    "test:e2e:setup": "cd tests/e2e && cp -r ../../fastapifn ./sample_lambda/ && serverless deploy",
    "vulture": "poetry run vulture fastapifn/ --min-confidence 50 --sort-by-size | head -500",
    "typecheck": "poetry run pyright",
    "lint": "poetry run flake8",
    "htmlcov": "open htmlcov/index.html"
  },
  "devDependencies": {
    "serverless": "^3.40.0",
    "serverless-python-requirements": "^6.1.2",
    "serverless-stack-output": "^0.2.3"
  }
}
